<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_5ssp"
    android:backgroundTint="@color/ss_medium_grey"
    android:orientation="vertical"
    tools:context=".puzzle.RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add User"
        android:layout_marginTop="@dimen/_25ssp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/light1"
        android:textSize="@dimen/_25ssp"
        android:fontFamily="@font/sofia_pro_semi_bold_italic"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="40sp"
        android:elevation="15sp"
        app:cardCornerRadius="15sp">


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_180sdp"
            android:layout_marginTop="@dimen/_120sdp">
        <ImageView
            android:id="@+id/Camera"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="0sp"
            android:layout_gravity="center"
            android:src="@drawable/camera_11" />
        </androidx.cardview.widget.CardView>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="216dp"
            android:layout_height="197dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="6.0sp"
            android:textColorHint="@color/black"
            app:boxBackgroundColor="@color/bg_grey"
            app:hintAnimationEnabled="true"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Caption"
            app:hintTextColor="@color/black">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageC"
                android:layout_width="229dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/image_shap"
                android:padding="20sp"
                android:src="@drawable/man"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:layout_marginLeft="@dimen/_26sdp"
            android:layout_gravity="start"
            android:layout_marginTop="25sp"
            android:fontFamily="@font/sofia_pro_regular"
            android:textSize="18sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="27sp"
            app:cardCornerRadius="10sp"
            android:elevation="10sp">
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:padding="14sp"
                android:inputType="text"
                android:background="@null"
                android:hint="User_Name"
                android:textSize="19sp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/btnSubmit"
            android:layout_width="248sp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20ssp"
            android:gravity="center"
            android:background="@drawable/button_signup"
            android:layout_height="60sp">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/sofia_pro_semi_bold"
                android:text="Add User"/>
        </LinearLayout>




    </LinearLayout>
