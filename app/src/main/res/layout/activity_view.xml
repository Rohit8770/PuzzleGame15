<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_5ssp"
    android:layout_height="match_parent"
    tools:context=".puzzle.ViewActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_5ssp"
        android:layout_height="@dimen/_37ssp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ad2">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="35dp"
                android:layout_marginTop="@dimen/_4ssp"
                android:layout_marginLeft="@dimen/_7ssp"
                android:layout_height="39dp"
                android:src="@drawable/arrow_back_ios_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_25ssp"
                android:textColor="@color/orengeFixed"
                android:text="History"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="@font/sofia_pro_semi_bold"/>

            <ImageView
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginTop="-4sp"
                android:layout_gravity="end"
                android:src="@drawable/logo" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light1"
        android:elevation="@dimen/_7ssp"
        app:cardCornerRadius="@dimen/_7ssp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgPerson"
            android:layout_width="63dp"
            android:layout_height="60dp"
            android:src="@drawable/man"/>
            <TextView
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:textStyle="italic"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME   :"/>
            <TextView
                android:id="@+id/txName1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_19ssp"
                android:layout_marginRight="-15sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="UserName"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvView"
        android:layout_marginTop="@dimen/_10ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>